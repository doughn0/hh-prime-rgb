#!/bin/bash

DAEMON_CURL_URL="http://localhost:1235"

#curl -s "http://localhost:1234/notify" -d "$1 $2 $3 $4 $5 $6 $7 $8 $9" >/dev/null

if [[ "$#" == 8 ]]; then
    batocera-settings-set led.mode "$1"
    batocera-settings-set led.brightness "$2"
    batocera-settings-set led.colour "$3 $4 $5"
    knulli-rgb-led-daemon
fi

if [[ "$#" == 3 ]]; then
    batocera-settings-set led.mode "$1"
    batocera-settings-set led.brightness "$2"
    knulli-rgb-led-daemon
fi

if [[ "$1" == "0" ]]; then
    batocera-settings-set led.mode "0"
    knulli-rgb-led-daemon
fi